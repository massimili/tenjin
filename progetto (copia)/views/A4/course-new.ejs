<%- include('partials/barrasuperiore', { cssFile: 'small-business.css' }) %>

<div class="container course-settings">
    <!-- Content Row -->
    <div class="row my-3">
        <div class="col-md-12 mb-5">
            <div class="card rounded-0">
                <div class="card-body">
                    <h5 class="card-title mb-2">Course Settings</h5>
                    <form method="POST">
                        <div class="form-group row">
                            <label for="inputTitle" class="col-sm-2 col-form-label">Title</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="inputTitle" name="title"
                                    placeholder="Title">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputImage" class="col-sm-2 col-form-label">Image</label>
                            <div class="col-sm-10">
                                <input type="file" class="form-control" id="inputImage" name="image" placeholder="File">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputShortDesc" class="col-sm-2 col-form-label">Short description</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="inputShortDesc" name="short"
                                    placeholder="Short Description">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="start" class="col-sm-2 col-form-label">Start date:</label>
                            <div class="col-sm-10">
                                <input type="date" id="start" name="start" value="2020-10-01" min="2020-09-01"
                                    max="2021-12-01">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="end" class="col-sm-2 col-form-label">End date:</label>
                            <div class="col-sm-10">
                                <input type="date" id="end" name="end" value="2020-10-31" min="2020-09-31"
                                    max="2021-12-31">
                            </div>

                        </div>
                        <div class="form-group row">
                            <label for="inputDescription" class="col-sm-2 col-form-label">Language</label>
                            <div class="col-sm-10">
                                <select class="form-control mr-3" name="language">
                                    <option value="en">English</option>
                                    <option value="it">Italiano</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputDescription" class="col-sm-2 col-form-label">Description</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="inputDescription" name="description"
                                    rows="3"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputDescription" class="col-sm-2 col-form-label">Teacher</label>
                            <div class="col-sm-10">
                                <select class="form-control mr-3" name="teacher">
                                    <option value="Marco Trognoni">Marco Trognoni</option>
                                </select>
                            </div>
                        </div>
                        <hr>
                        <div class="form-group row">
                            <div class="col-sm-12 text-right">
                                <button type="submit" class="btn btn-success mr-2">
                                    <i class="fas fa-save mr-2"></i>Save
                                </button>
                                <button type="reset" class="btn btn-warning">
                                    Cancel
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->

</div>
<!-- /.container -->

<!-- Footer -->
<footer class="py-2 bg-dark">
    <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; TenjinLMS 2020</p>
    </div>
    <!-- /.container -->
</footer>

<!-- Bootstrap core JavaScript -->
<script src="../vendor/jquery/jquery.min.js"></script>
<script src="../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<script>
    var simplemde = new SimpleMDE({ element: document.getElementById("inputDescription") });
</script>

</body>

</html>