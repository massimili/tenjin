<%- include('partials/barrasuperiore', { cssFile: 'small-business.css' }) %>

<!-- Page Content -->
<form method="POST">
  <div class="container">
    <!-- Content Row -->
    <div class="row mt-5 mb-3">
      <div class="col-md-6">
        <div class="card rounded-0">
          <div class="card-body">
            <h4>Top Block</h4>
            <div class="form-group row">
              <label for="inputTitle" class="col-sm-2 col-form-label">Name</label>
              <div class="col-sm-10">
                <input type="text" value="<%=scuola.name%>" class="form-control" id="inputSchoolName" name="name"
                  placeholder="School Name">
              </div>
            </div>
            <div class="form-group row">
              <label for="inputImage" class="col-sm-2 col-form-label">Image</label>
              <div class="col-sm-10">
                <div class="d-flex">
                  <input type="file" class="form-control mr-2" id="inputImage" name="image" placeholder="File">
                  <img src="/img/<%=scuola.image%>" class="img-fluid ml-auto" style="width: 200px">
                </div>
              </div>
            </div>
            <div class="form-group row">
              <label for="inputTitle" class="col-sm-2 col-form-label">Title</label>
              <div class="col-sm-10">
                <input type="text" value="<%=scuola.title%>" class="form-control" id="inputTitle" name="title"
                  placeholder="Title">
              </div>
            </div>
            <div class="form-group row">
              <label for="inputShortText" class="col-sm-2 col-form-label">Short</label>
              <div class="col-sm-10">
                <input type="text" value="<%=scuola.short%>" class="form-control" id="inputShortText" name="short"
                  placeholder="Short Text">
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card rounded-0">
          <div class="card-body">
            <h4>Call Out Block</h4>
            <div class="form-group row">
              <label for="inputTitle" class="col-sm-2 col-form-label">Title</label>
              <div class="col-sm-10">
                <input type="text" value="<%=scuola.title2%>" class="form-control" id="inputTitle" name="title2"
                  placeholder="Title">
              </div>
            </div>
            <div class="form-group row">
              <label for="inputShortText" class="col-sm-2 col-form-label">Short</label>
              <div class="col-sm-10">
                <input type="text" value="<%=scuola.short2%>" class="form-control" id="inputShortText" name="short2"
                  placeholder="Short Text">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row mb-5">
      <div class="col-md-12 text-right">
        <button type="submit" class="btn btn-success mr-2">
          <i class="fas fa-save mr-2"></i>Save
        </button>
        <button type="reset" class="btn btn-warning">
          Cancel
        </button>
      </div>
    </div>

    <!-- /.row -->

  </div>
</form>
<!-- /.container -->

<!-- Footer -->
<footer class="py-2 bg-dark">
  <div class="container">
    <p class="m-0 text-center text-white">Copyright &copy; TenjinLMS 2020</p>
  </div>
  <!-- /.container -->
</footer>

<!-- Bootstrap core JavaScript -->
<script src="../vendor/jquery/jquery.min.js"></script>
<script src="../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>