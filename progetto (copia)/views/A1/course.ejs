<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Tenjin School - by TenjinLMS</title>

    <!-- Bootstrap core CSS -->
    <link href="../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="../css/small-business.css" rel="stylesheet">
    <script src="https://use.fontawesome.com/releases/v5.13.0/js/all.js" data-auto-replace-svg="nest"></script>

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                Tenjin School - by TenjinLMS
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item mr-2">
                        <a class="btn btn-primary" href="/login"><i class="fas fa-sign-in-alt mr-2"></i>Sign
                            in</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-secondary" href="/register">Sign up</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container-fluid bg-secondary">
        <div class="row py-5">
            <div class="col-md-12 text-white">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8">
                            <h2 class="card-title"><%=corso.title%></h2>
                            <p class="card-text"><%=corso.short%></p>
                            <div class="text-small">
                                <span class="d-block">
                                    <i class="fas fa-calendar mr-1"></i>
                                    <span class="mr-2">Start date <strong><%=corso.start%></strong></span>
                                    <i class="fas fa-calendar mr-1"></i>
                                    <span class="mr-2">End date <strong><%=corso.end%></strong></span>
                                </span>
                                <span class="d-block">
                                    <i class="fas fa-comment mr-2"></i>
                                    <span class="mr-2"><%=corso.language%></span>
                                    <i class="fas fa-user-cog mr-2"></i>Teacher <strong><%=corso.teacher%></strong>
                                </span>
                            </div>
                            <p class="mt-2 mb-0">
                                <a class="btn btn-block btn-primary" href="/register">Join Now!</a>
                            </p>
                        </div>
                        <div class="col-md-4">
                            <img class="img-fluid" src="/img/<%=corso.image%>">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container course">
        <!-- Content Row -->
        <div class="row my-3">
            <div class="col-md-12 mb-5">
                <h5>Description</h5>
                <p><%=corso.description%></p>

            </div>
            <!-- /.row -->

        </div>
        <!-- /.container -->

        <!-- Footer -->
        <footer class="py-2 bg-dark">
            <div class="container">
                <p class="m-0 text-center text-white">Copyright &copy; TenjinLMS 2020</p>
            </div>
            <!-- /.container -->
        </footer>

        <!-- Bootstrap core JavaScript -->
        <script src="../vendor/jquery/jquery.min.js"></script>
        <script src="../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>