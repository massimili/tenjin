<%- include('partials/head', { cssFile: 'small-business.css' }) %>
<%- include('partials/navigation/anonymous') %>

<!-- Page Content -->
<div class="container">

    <!-- Heading Row -->
    <div class="row align-items-center my-5">
        <div class="col-lg-7">
            <img class="img-fluid rounded mb-4 mb-lg-0" src="/img/<%=scuola.image%>" alt="">
        </div>
        <!-- /.col-lg-8 -->
        <div class="col-lg-5">
            <h1 class="font-weight-light"><%=scuola.name%></h1>
            <h3><%=scuola.title%></h3>
            <p>
                <%=scuola.short%>
            </p>
            <a class="btn btn-primary" href="/register">Join now!</a>
        </div>
        <!-- /.col-md-4 -->
    </div>
    <!-- /.row -->

    <!-- Call to Action Well -->
    <div class="card text-white bg-secondary my-5 py-2 text-center">
        <div class="card-body">
            <h3 class="text-white m-0 mb-1"><%=scuola.title2%></h3>
            <h5 class="text-white m-0">
                <%=scuola.short2%>
            </h5>
            <p class="mt-2 mb-0">
                <a class="btn btn-primary" href="/register">Join Now!</a>
            </p>
        </div>
    </div>

    <!-- Content Row -->
    <div id="courseCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="row">
                    <% for (var i = 0; i < 3; i++) { %>
                    <div class="col-md-4 mb-5">
                        <div class="card h-100">
                            <img class="card-img-top" src="img/<%= corsi[i].image %>">
                            <div class=" card-body">
                                <h2 class="card-title"><%= corsi[i].title %></h2>
                                <p class="card-text"><%= corsi[i].short %></p>
                            </div>
                            <div class="card-footer">
                                <a href="/course/?indice=<%=i%>" class="btn btn-block btn-primary btn-sm">
                                    Learn more<i class="fas fa-arrow-right mt-1 ml-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- /.col-md-4 -->
                    <% } %>

                </div>
            </div>
            <div class="carousel-item">
                <div class="row">
                    <% for (var i = 3; i < corsi.length; i++) { %>
                    <div class="col-md-4 mb-5">
                        <div class="card h-100">
                            <img class="card-img-top" src="img/<%= corsi[i].image %>">
                            <div class="card-body">
                                <h2 class="card-title"><%= corsi[i].title %></h2>
                                <p class="card-text"><%= corsi[i].short %></p>
                            </div>
                            <div class="card-footer">
                                <a href="/course/?indice=<%=i%>" class="btn btn-block btn-primary btn-sm">
                                    Learn more<i class="fas fa-arrow-right mt-1 ml-2"></i>
                                </a>
                            </div>

                        </div>
                    </div>
                    <% } %>

                </div>
            </div>
        </div>
        <a class=" carousel-control-prev" href="#courseCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#courseCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>
<!-- /.container -->

<%- include('partials/footer') %>